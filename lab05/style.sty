//Variables
border-config = 1px solid #000

//Stylesheet
body 
		font: 24px Helvetica
		background: #999999
    
		//Header style
		header
				font-size: 250%
				padding: 20px
				border: border-config
				min-height: 100px
				background: #ffeebb

		//Style for main and its components: nav, article, and aside
    #main 
				min-height: 800px
				display: flex
				flex-flow: row
				nav 
					text-align: right
					padding: 20px
					border: border-config
					background: #ccccff
					flex: 1 6 20%
					order: 1
				article 
					padding: 20px
					border: border-config
					background: #dddd88
					flex: 3 1 60%
					order: 2
				aside 
					font-style: italic
					padding: 20px
					border: border-config
					background: #ccccff
					flex: 1 6 20%
					order: 3
 
		//Footer style
		footer 
				padding: 20px
				min-height: 100px
				border: border-config
				background: #ffeebb
 
    /* Too narrow to support three columns */
		@media all and (max-width: 640px) 
				#main, #page 
						flex-direction: column
						//Configures nav to fit specification
						nav	
							min-height: 90px
							max-height: 90px
							text-align: left
						//Ensures text doesn't overflow
						aside, header, footer
							min-height: 120px
							max-height: 120px
						//Reduces text size to respond to smaller screen
						aside, footer
							font-size: 75%
       	
				//Reduces header size to respond to smaller screen
				header 
						font-size: 200%
